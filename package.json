{
  "name": "recipe-db-api",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node ./bin/www",
    "serve": "nodemon ./bin/www",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo **/*.js",
    "test": "xo"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^4.18.2",
    "mongodb": "^5.4.0",
    "mongoose": "^7.1.0",
    "morgan": "~1.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.22",
    "xo": "^0.54.2"
  },
  "xo": {
    "prettier": true,
    "semicolon": false,
    "envs": [
      "commonjs",
      "mongo",
      "node"
    ],
    "rules": {
      "strict": "error",
      "unicorn/prefer-module": "off"
    }
  }
}
