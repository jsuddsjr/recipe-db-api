{
  "name": "recipe-db-api",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo src/**/*.js",
    "serve:reload": "livereload --debug -ee 'pug' src/",
    "serve:watch": "set DEBUG=express:* && nodemon ./src/bin/www",
    "serve": "npm-run-all --parallel serve:watch serve:reload",
    "start": "node ./src/bin/www"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "body-parser": "^1.20.2",
    "connect-livereload": "^0.6.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "iso-datestring-validator": "^2.2.2",
    "iso8601-duration": "^2.1.1",
    "mongodb": "^5.5.0",
    "mongoose": "^7.1.1",
    "morgan": "~1.10.0",
    "pug": "^3.0.2",
    "pug-bootstrap": "^0.0.16",
    "realm-web": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "resolutions": {
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/pug": "^2.0.6",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.5",
    "bootstrap-pug": "^1.0.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "xo": "^0.54.2"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "../public/**/*"
    ],
    "ext": "*"
  },
  "xo": {
    "prettier": true,
    "semicolon": false,
    "envs": [
      "commonjs",
      "mongo",
      "node"
    ],
    "rules": {
      "strict": "error",
      "unicorn/prefer-module": "off"
    }
  }
}
