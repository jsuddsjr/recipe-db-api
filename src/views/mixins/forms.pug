include icons

//- Input control with form-group wrapper
mixin input_block(type,id,label)
    .mb-3
        +label(id)= label
        +input(type,id)&attributes(attributes)
        block

mixin label(id)
    label.form-label(for=id): block

//- Simple form input control without a form-group
mixin input(type,id)
    input.form-control(type=type, id=id)&attributes(attributes)

//- Simple form input control without a form-group
mixin textarea(id)
    textarea.form-control(id=id, rows=3)&attributes(attributes): block

//- Submit button
mixin submit()
    button.btn.btn-primary(type="submit")&attributes(attributes): block

//- Regular button
mixin button()
    button.btn(type="button")&attributes(attributes): block

//- Checkbox - Block style
mixin checkbox(text,name,id)
    .checkbox
        label
            input(type="checkbox",name=name,id=id)
            = text

//- Checkbox - Inline style
mixin checkbox-inline(text,name,id)
    .checkbox-inline
        input(type="checkbox",name=name,id=id)
        = text

//- Radio box
mixin radio(text,name,id)
    .radio
        label
            input(type="radio",name=name,id=id)
            = text

//- Radio box - Inline style
mixin radio-inline(text,name,id)
    .radio-inline
        input(type="radio",name=name,id=id)
        = text

//- Input group - both prepend and append attributes available, and block is passed
mixin input_group(prepend,append)
    .mb-3
        .input-group
            unless !prepend
                .input-group-addon
                    = prepend
                block
                unless !append
                    .input-group-addon
                        = append

//- Icon button
mixin icon-btn(icon)
    button.btn.btn-primary(type="button",aria-label=icon)
        +icon(icon)

//- Badges
mixin badge(text)
    span.badge= text
