extends _layout

//- What happens with multiple dropdowns on the same page?
mixin select(name, title)
  select.form-select(name=name title=title)&attributes(attributes)
    block

block content
  include ./mixins/forms

  h2= 'Add nutrition information'
  p Here's where you can add nutrition information about ingredients in your recipes.
  form.row.g-3.needs-validation(action='/api/nutrition' method='POST' novalidate)
    +input_block('text', 'name', 'Name')(placeholder = "Ingredient name", required)
      .invalid-feedback
        | Name is required.
    .mb-3
      +label('servingSize') Serving Size
      .input-group
        +input('number', 'servingSize')(value="1" required)
        +select('servingSizeUnits', 'Serving size units')(class="col-4")
          option Tbsp
          option Cup
          option Ounce
          option Grams
      .invalid-feedback
        | How big is one serving?
    +input_block('text', 'calories', 'Calories')(required)
      .invalid-feedback
        | How many calories for this serving?
    h3 Fat
    +input_block('text', 'fatContent', 'Total Fat')
    +input_block('text', 'saturatedFatContent', 'Saturated Fat')
    +input_block('text', 'unsaturatedFatContent', 'Unsaturated Fat')
    h3 Cholesterol
    +input_block('text', 'cholesterolContent', 'Cholesterol')
    h3 Sodium
    +input_block('text', 'sodiumContent', 'Sodium')
    h3 Carbohydrate
    +input_block('text', 'carbohydrateContent', 'Carbohydrate')
    +input_block('text', 'fiberContent', 'Fiber')
    +input_block('text', 'sugarContent', 'Added Sugars')
    h3 Protein
    +input_block('text', 'proteinContent', 'Protein')
    .btn-group(role="group")
      +submit() Add
      +button()(class='btn-outline-secondary' type='reset') Reset

append scripts
  script(src='/javascripts/form-validation.js')
